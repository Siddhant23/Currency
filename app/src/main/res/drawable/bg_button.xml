<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false">
        <shape>
            <stroke android:width="1dp" android:color="@android:color/transparent" />
            <corners android:radius="@dimen/radius" />
            <padding android:bottom="4dp" android:left="8dp" android:right="8dp" android:top="4dp" />
            <solid android:color="@color/colorDisabled" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape>
            <stroke android:width="1dp" android:color="@android:color/transparent" />
            <corners android:radius="@dimen/radius" />
            <padding android:bottom="4dp" android:left="8dp" android:right="8dp" android:top="4dp" />
            <solid android:color="@color/colorTint" />
        </shape>
    </item>

    <item android:state_focused="true">
        <shape>
            <stroke android:width="1dp" android:color="@android:color/transparent" />
            <corners android:radius="@dimen/radius" />
            <padding android:bottom="4dp" android:left="8dp" android:right="8dp" android:top="4dp" />
            <solid android:color="@color/colorTint" />
        </shape>
    </item>

    <item>
        <shape>
            <stroke android:width="1dp" android:color="@android:color/transparent" />
            <corners android:radius="@dimen/radius" />
            <padding android:bottom="4dp" android:left="8dp" android:right="8dp" android:top="4dp" />
            <solid android:color="@color/colorButton" />
        </shape>
    </item>
</selector>